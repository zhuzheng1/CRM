<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-config.dtd">
  
<configuration>
	<properties resource="jdbc.properties" />
	
	<typeAliases>
		<package name="com.crm.settings.domain"/>
		<package name="com.crm.workbench.domain"/>
	</typeAliases>
	
	<environments default="mysql">
		<environment id="mysql">
		<transactionManager type="JDBC"></transactionManager>
			<dataSource type="POOLED">
				<property name="driver" value="${jdbc.driver}"/>
				<property name="url" value="${jdbc.url}"/>
				<property name="username" value="${jdbc.user}"/>
				<property name="password" value="${jdbc.password}"/>
			</dataSource>
		</environment>
	</environments>
	
	<mappers>
		<package name="com.crm.settings.dao"/>
		<package name="com.crm.workbench.dao"/>
		<!--<mapper resource="com/bjpowernode/dao/StudentDao.xml" /> -->
		
		<!-- <mapper class="com.crm.settings.dao.UserDao"/>
		<mapper class="com.crm.workbench.dao.ActivityDao"/> -->
	</mappers>
	
</configuration>